# Environment Configuration Template

# Database Configuration
DATABASE_URL=sqlite:///./agentic_iam.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/agentic_iam
# For MySQL: DATABASE_URL=mysql+pymysql://user:password@localhost/agentic_iam

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_TOKEN_TTL=3600
JWT_REFRESH_TTL=604800

# Session Configuration
SESSION_TTL=3600
SESSION_CLEANUP_INTERVAL=3600
MAX_SESSIONS_PER_AGENT=10
SESSION_STORE_BACKEND=memory
# Options: memory, redis, database

# Credential Manager Configuration
CREDENTIAL_ENCRYPTION_KEY=your-encryption-key-change-this-in-production
CREDENTIAL_STORAGE_BACKEND=memory
# Options: memory, file, database, vault
CREDENTIAL_ROTATION_DAYS=90

# Audit & Compliance Configuration
AUDIT_LOG_LEVEL=INFO
AUDIT_STORAGE_BACKEND=memory
# Options: memory, file, database, elasticsearch
AUDIT_LOG_PATH=./logs/audit.log
ENABLE_AUDIT_ENCRYPTION=true
COMPLIANCE_FRAMEWORKS=gdpr,hipaa,sox,pci-dss
DATA_RETENTION_DAYS=2555

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=json
# Options: json, plain
ENABLE_CONSOLE_LOGGING=true
MAX_LOG_FILE_SIZE=104857600
BACKUP_LOG_COUNT=10

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
ENABLE_JAEGER_TRACING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Security Configuration
ENABLE_TLS=false
TLS_CERT_PATH=./certs/cert.pem
TLS_KEY_PATH=./certs/key.pem
REQUIRE_TLS=false
ENABLE_MTLS=false
MTLS_CA_PATH=./certs/ca.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Trust Scoring Configuration
TRUST_SCORE_ALGORITHM=ml
# Options: rule-based, ml, hybrid
ANOMALY_DETECTION_ENABLED=true
ANOMALY_DETECTION_THRESHOLD=0.7

# Feature Flags
ENABLE_DASHBOARD=true
ENABLE_GRAPHQL=false
ENABLE_KUBERNETES_OPERATOR=false
ENABLE_MOBILE_ENDPOINTS=true

# Environment
ENVIRONMENT=development
# Options: development, staging, production
IS_PRODUCTION=false

# Debug Configuration
DEBUG=true
ENABLE_PROFILING=false
PROFILE_OUTPUT_PATH=./profiles/

# Integration Configuration
ENABLE_OIDC=false
OIDC_PROVIDER_URL=
ENABLE_SAML=false
SAML_METADATA_URL=

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL_FROM=

# Storage Configuration (for credentials and artifacts)
STORAGE_TYPE=local
# Options: local, s3, gcs, azure
STORAGE_PATH=./data/
S3_BUCKET=
S3_REGION=
